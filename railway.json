{  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build && chmod +x railway-boot.sh || echo 'Could not set permissions, continuing anyway'"
  },
  "deploy": {
    "startCommand": "./railway-boot.sh",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
